@model List<Pizza>
@{

    Layout = "_mioLayout";


}


<div class = "row justify-content-center mb-5">

    <div class= "col-3">

        <img src="https://toolset.mrw.it/temp/logo_76655a33eddb47f5bade742ccba6ddcb.png" class="card-img-top" alt="primaFoto">

    </div>

</div>
     
<div>
    @foreach (Pizza listPizza in Model){
   
        <div class="row text-center justify-content-center">
            <div class ="col-3">
            <div class="card shadow mb-5 bg-body rounded">
                <img class="img-fluid" src=@listPizza.foto class="card-img-top" alt="primaFoto">
                <div class="card-body p-0 pb-0">
                    <h6 class="card-title text-uppercase bg-danger pb-2 pt-2 text-white ">@listPizza.nome</h6>
                    <p class="card-text ps-2 pe-2 mb-4 mt-3"><small>@listPizza.descrizione</small></p>
                </div>
                <ul class="list-group list-group-flush pb-0 mb-2">
                    <li class="list-group-item text-danger"><small>Prezzo:</small><br><span class="text-black fw-bold"><small>@listPizza.prezzo</small></span><span class="text-secondary"></span></li> 
                </ul>    
            </div> 
            </div>
        </div>

    }  
          
   </div>  
